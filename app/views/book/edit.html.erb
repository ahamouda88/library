<h1> Edit A Book </h1>

<%= form_for @book, :url => {:action => 'update', :id => @book } do |b| %>
  <p>Title: <%= b.text_field 'title' %></p>
  <p>Price: <%= b.text_field 'price' %></p>
  <p>Subject: <%= b.collection_select(:subject_id, @subjects, :id, :name) %></p></p>

  <p>Description<br/>
  <%= b.text_area 'description' %></p>

  <%= b.submit "Save Changes" %>
<% end %>
<%= link_to 'Back', {:action => 'list'} %>
